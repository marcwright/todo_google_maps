<%= form_for(@todo, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @todo.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@todo.errors.count, "error") %> prohibited this todo from being saved:</h4>

      <ul>
      <% @todo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-1 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <%= f.label :business_name, class: "col-sm-1 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :business_name, id: "todoBusinessName", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">

  <%= f.label :due_date, class: "col-sm-1 control-label" %>
    <div class="col-sm-5">
      <%= f.date_field :due_date, class: "form-control" %>
    </div>

    <%= f.label :address, class: "col-sm-1 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :address, id: "todoAddress", class: "form-control" %>
    </div>   
  </div>
  
  <div class="form-group">
    <%= f.label :assignee, class: "col-sm-1 control-label" %>
    <div class="col-sm-5">
      <%= f.collection_select :assignee_id, Assignee.all, :id, :name, :prompt => true %>
    </div>

    <%= f.label :city, class: "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :city, id: "todoCity", class: "form-control" %>
    </div>

    <%= f.label :state, class: "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :state, id: "todoState", class: "form-control" %>
    </div> 

    <!-- <%= f.label :completed, class: "col-sm-1 control-label" %>
    <div class="col-sm-1">
      <%= f.check_box :completed, class: "form-control" %>
    </div>

    <%= f.label :assigned, class: "col-sm-1 control-label" %>
    <div class="col-sm-1">
      <%= f.check_box :assigned, class: "form-control" %>
    </div> -->
  </div>
  <!-- <div class="form-group">
    <%= f.label :pac_input, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :business_name, id: "autocomplete", class: "form-control" %>
    </div>
  </div> -->

  <%= f.hidden_field :what, value: "todo" %>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render 'layouts/new_todo_form_map' %>