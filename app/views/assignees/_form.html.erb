<%= form_for(@assignee, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @assignee.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@assignee.errors.count, "error") %> prohibited this assignee from being saved:</h4>

      <ul>
      <% @assignee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  
    <%= f.label :city, class: "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :city, class: "form-control" %>
    </div>
 

    <%= f.label :state, class: "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :state, class: "form-control" %>
    </div>
  </div>


 <!--  <div class="form-group">
    <%= f.label :zip, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :zip, class: "form-control" %>
    </div>
  </div> -->
  <div class="form-group">
    <%= f.label :phone, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.telephone_field :phone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image_url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :img_url, class: "form-control" %>
    </div>
  </div>
  <%= f.hidden_field :what, value: "assignee" %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
