<div style='width: 800px;'>
  <div id="multi_markers" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
  $(function() {
      // var lat = <%= @lat %>
      // var lng = <%= @lng %>
      var assignee_coords = <%= @assignee_coords_array.to_json.html_safe %>;
      var todo_coords = <%= @todo_coords_array.to_json.html_safe %>;
      console.log("assignee coords:" + assignee_coords + " todo coords:" + todo_coords);
      handler = Gmaps.build('Google');
      
      handler.buildMap({
          provider: {
            disableDefaultUI: false
            // pass in other Google Maps API options here
          },
          internal: {id: 'multi_markers'}
        }, 

        function(){
          markers = handler.addMarkers(assignee_coords);
        
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        }
      );
  });
</script>

