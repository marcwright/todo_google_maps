<div class="page-header">
  <%= link_to new_todo_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Todo
  <% end %>
  <h1>Here are your TODOs</h1>
</div>

<%#= @cc %>

<div class="table-responsive todos">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Due Date</th>
        <th>Completed</th>
        <th>Assigned</th>
        <th>Assignee</th>
        <th>Edit</th>
        <th>Destroy</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% if @todos %>
          <%= content_tag_for(:tr, @todos) do |todo| %>
                <td><%= link_to todo.title, todo %></td>
                <td><%= todo.due_date %></td>
                <td>
                  <%= link_to("/todos/#{todo.id}/toggle_completed") do %>
                    <% if todo.completed %>
                      <span class="glyphicon glyphicon-ok"></span>
                    <% else %>
                      <span class="glyphicon glyphicon-unchecked"></span>
                    <% end %>
                  <% end %>
                </td>
                <td>
                  <%= link_to("/todos/#{todo.id}/assigned") do %>
                    <% if todo.assigned %>
                      <span class="glyphicon glyphicon-ok"></span>
                    <% else %>
                      <span class="glyphicon glyphicon-unchecked"></span>
                    <% end %>
                  <% end %>
                </td>

                <td>
                  <%= todo.assignee ? todo.assignee.name : "Assign Someone!" %>
                </td>
                
            <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
            <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      <% else %>
        <td>Create a Todo!</td>
      <% end %>    
    </tbody>
  </table>
</div>

<%= render 'layouts/map' %>
