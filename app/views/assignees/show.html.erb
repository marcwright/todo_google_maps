<div class="page-header">
  <%= link_to assignees_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_assignee_path(@assignee), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show assignee</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @assignee.name %></dd>

  <dt>Address:</dt>
  <dd><%= @assignee.address %></dd>

  <dt>City:</dt>
  <dd><%= @assignee.city %></dd>

  <dt>State:</dt>
  <dd><%= @assignee.state %></dd>

  <dt>Zip:</dt>
  <dd><%= @assignee.zip %></dd>

  <dt>Phone:</dt>
  <dd><%= @assignee.phone %></dd>

</dl>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>



<script type="text/javascript">
  $(function() {
      handler = Gmaps.build('Google');
      handler.buildMap({
      provider: {
        disableDefaultUI: true
        // pass in other Google Maps API options here
      },
      internal: {
        id: 'map'
      }
    },
    function(){
      markers = handler.addMarkers([
        {
          "lat": 0,
          "lng": 0,
          "picture": {
            "url": "http://people.mozilla.com/~faaborg/files/shiretoko/firefoxIcon/firefox-32.png",
            "width":  32,
            "height": 32
          },
          "infowindow": "hello!"
        }
      ]);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });
  });
</script>

<script src="http://www.maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
