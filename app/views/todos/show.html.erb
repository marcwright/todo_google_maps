<div class="page-header">
  <%= link_to todos_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_todo_path(@todo), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show todo</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @todo.title %></dd>

  <dt>Assigned To:</dt>
  <dd><%= @assignee.name %></dd>

  <dt>Address:</dt>
  <dd><%= @todo.address %>, <%= @todo.city %>, <%= @todo.state %></dd>

  <dt>Due Date:</dt>
  <dd><%= @todo.due_date %></dd>

  <dt>Assigned:</dt>
  <dd><%= @todo.assigned %></dd>

  <dt>Completed:</dt>
  <dd><%= @todo.completed %></dd>

  <dt>Created:</dt>
  <dd><%= @todo.created_at.strftime("%m-%d-%Y") %></dd>

</dl>
