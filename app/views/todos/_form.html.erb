  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-1 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <%= f.label :business_name, class: "col-sm-1 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :business_name, id: "todoBusinessName", class: "form-control" %>
