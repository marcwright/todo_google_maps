<div class="page-header">
  <%= link_to assignees_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_assignee_path(@assignee), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show assignee</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @assignee.name %></dd>

  <dt>Address:</dt>
  <dd><%= @assignee.address %></dd>

  <dt>City:</dt>
  <dd><%= @assignee.city %></dd>

  <dt>State:</dt>
  <dd><%= @assignee.state %></dd>

  <dt>Zip:</dt>
  <dd><%= @assignee.zip %></dd>

  <dt>Phone:</dt>
  <dd><%= @assignee.phone %></dd>

</dl>

<div style='width: 800px;'>
  <div id="multi_markers" style='width: 800px; height: 400px;'></div>
</div>

<%= @hash %>



<script type="text/javascript">
  $(function() {
      // var lat = <%= @lat %>
      // var lng = <%= @lng %>
      var assignee_coords = <%= @assignee_coords_array.to_json.html_safe %>;
      console.log(assignee_coords);
      handler = Gmaps.build('Google');
      
      handler.buildMap({
          provider: {
            disableDefaultUI: false
            // pass in other Google Maps API options here
          },
          internal: {id: 'multi_markers'}
        }, 

        function(){
          var markers = handler.addMarkers(assignee_coords);
        
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        }
      );
  });
</script>

<script src="http://www.maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
<script src="http://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
